@model CaseItauWeb.Models.FundoModel
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Editar Patrimonio";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<h1>Editar Patrimonio</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPatrimony" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" value="@Model.Nome" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cnpj" class="control-label"></label>
                <input asp-for="Cnpj" class="form-control" value="@Model.Cnpj"/>
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patrimonio" class="control-label"></label>
                <input asp-for="Patrimonio" class="form-control" value="@Model.Patrimonio"/>
                <span asp-validation-for="Patrimonio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
